public class Main
{
    
    
	public static void main(String[] args) {
		Main loop = new Main();
		loop.number();
		
}
   void  number(){
       int number=8;
        
        for(int row=1;row<=number;row++){
            for(int col=1;col<=row;col++){
                System.out.print(col+" ");
            }
            System.out.println();
        }
         for(int row=9;row>=1;row--){
            for(int col=1;col<=row;col++){
                System.out.print(col+" ");
            }
             System.out.println();
         }
        
    }
    
    
}






